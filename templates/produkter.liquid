	</div>
</div>



{% endblock %}

{% block fullscreen %}
{% endblock %}

{% block script %}
<script>
	$(document).ready(function() {
	var owl = $("#owl-carousel");

	owl.owlCarousel({
	    navigation : false, // Show next and prev buttons
	    navigationText : ["forrige","neste"],
	    pagination: true, // Show dotted pagination
	    paginationNumbers: false, // Show numbers in bullets
	    autoPlay : false,
	    stopOnHover: true,
	    singleItem:false,
	    slideSpeed : 300,
	    paginationSpeed : 300,
	    items : 3, //items
	    itemsDesktop : [1024,3], //items from here and down
	    itemsDesktopSmall : [700,2], //
	    itemsTablet: [430,1], //items from here and down
	    itemsMobile : [300,1], //items from here and down
	});

	});
</script>
