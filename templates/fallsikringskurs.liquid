	var container04 = $('#port-01').imagesLoaded( function() {;
		container04.isotope({
			itemSelector: '.item',
			layoutMode: 'masonry',
			transitionDuration: '300ms',
			masonry: {
				columnWidth: '.item',
				gutter: 0
			}
		})
	});
</script>
{% endblock %}