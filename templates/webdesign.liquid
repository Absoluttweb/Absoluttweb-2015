{% block script %}
<script>
	var container = $('#mockup').imagesLoaded( function() {;
		container.isotope({
			itemSelector: '.item',
			layoutMode: 'masonry',
			transitionDuration: '300ms',
			masonry: {
				columnWidth: '.item',
				gutter: 0
			}
		})
	});
</script>
{% endblock %}