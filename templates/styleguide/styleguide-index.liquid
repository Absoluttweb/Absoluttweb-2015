{% layout 'styleguide' %}

{% block main %}

<!-- BAND WITH TYPOGRAPHY -->
<div class="band band-sg-main pad-top pad-bot">
	
	<!-- H2 & Lead -->
	<div class="row">
		<div class="large-8 large-centered large-text-center columns">
			<h2>Overskrift 2</h2>
