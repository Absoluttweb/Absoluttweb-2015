					<li><span class="title">PDF</span><a href="#">Download brochure</a></li>
				</ul>
				{% include 'code/code-ul-specs' %}	
			</div>
		</div>
		<!-- End Lists -->

		<!-- Hr -->
		<div class="row">
			<div class="large-12 columns">
				<hr>
			</div>
		</div>
		<!-- End Hr -->

	</div>
